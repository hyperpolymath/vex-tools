project Vexometer_Bench is

   for Source_Dirs use ("../src", ".");
   for Source_Files use (
      "benchmark_runner.adb",
      "vexometer.ads",
      "vexometer-core.ads",
      "vexometer-core.adb",
      "vexometer-patterns.ads",
      "vexometer-patterns.adb",
      "vexometer-probes.ads",
      "vexometer-probes.adb",
      "vexometer-reports.ads",
      "vexometer-reports.adb"
   );
   for Object_Dir use "../obj/bench";
   for Exec_Dir use "../bin";
   for Main use ("benchmark_runner.adb");

   package Compiler is
      for Default_Switches ("Ada") use (
         "-gnat2022",
         "-gnatwa"
      );
   end Compiler;

end Vexometer_Bench;
